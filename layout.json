{
  "type": "ScrollView",
  "layout_width": "match_parent",
  "layout_height": "match_parent",
  "scrollbars": "none",
  "children": [
    {
      "type": "LinearLayout",
      "layout_width": "match_parent",
      "layout_height": "match_parent",
      "orientation": "vertical",
      "background": "#efefef",
      "children": {
        "@": {
          "collection": "@{fn:slice(@{user.tags},0,4)}",
          "layout": {
            "type": "TextView",
            "data": {
              "tag": "@{user.tags[$index]}"
            },
            "layout_marginRight": "8dp",
            "layout_height": "32dp",
            "textSize": "12sp",
            "textColor": "@color/colorAccent",
            "text": "@{tag}",
            "padding": "8dp",
            "gravity": "center",
            "onClick": "@{tag}"
          }
        }
      }
    }
    ]
  
}
